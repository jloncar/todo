{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ESNext",
        "lib": ["es2015", "dom"],
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "./dist",
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true
    },
    "include": ["./src/**/*.tsx"]
}
